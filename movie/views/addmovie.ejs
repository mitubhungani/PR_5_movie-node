<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Movie</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Add New Movie</h1>

        <form action="/movie/create" method="POST">
            <!-- Movie Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Movie Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter movie title" required>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter movie description" required></textarea>
            </div>

            <!-- Release Date -->
            <div class="mb-3">
                <label for="releaseDate" class="form-label">Release Date</label>
                <input type="date" class="form-control" id="releaseDate" name="releaseDate" required>
            </div>

            <!-- Category -->
            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <input type="text" class="form-control" id="category" name="category" placeholder="Enter movie category" required>
            </div>

            <!-- Actors -->
            <div class="mb-3">
                <label for="actors" class="form-label">Actors</label>
                <input type="text" class="form-control" id="actors" name="actors" placeholder="Enter actors (comma-separated, e.g., Tom Cruise, Will Smith)" required>
            </div>

            <!-- Image URL -->
            <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input type="url" class="form-control" id="image" name="image" placeholder="Enter image URL" required>
            </div>

            <!-- Ratings -->
            <div class="mb-3">
                <label for="ratings" class="form-label">Initial Rating (0-10)</label>
                <input type="number" class="form-control" id="ratings" name="ratings" min="0" max="10" step="0.1" placeholder="Enter initial rating" required>
            </div>

            <!-- Comments -->
            <div class="mb-3">
                <label for="comments" class="form-label">Comments</label>
                <textarea class="form-control" id="comments" name="comments" rows="2" placeholder="Enter an initial comment (optional)"></textarea>
            </div>

            <!-- Added By -->
            <!-- <div class="mb-3">
                <label for="addedBy" class="form-label">Added By</label>
                <input type="text" class="form-control" id="addedBy" name="addedBy" placeholder="Enter your name" required>
            </div> -->

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100">Add Movie</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
