<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
        }

        .movie-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 20px;
        }

        .movie-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 300px;
            padding: 20px;
            text-align: left;
            transition: transform 0.3s ease;
        }

        .movie-card:hover {
            transform: translateY(-10px);
        }

        .movie-card p {
            margin: 10px 0;
            color: #555;
        }

        .movie-card p span {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div>
        <h1>Movie List</h1>
    </div>
    <div class="movie-container">
        <% movie.forEach((m)=> { %>
            <div class="movie-card">
                <img src="<%= m.image %>" alt="Movie Image" style="width: 100%; border-radius: 8px;">
                <p><span>Title:</span>
                    <%= m.title %>
                </p>
                <p><span>Description:</span>
                    <%= m.description %>
                </p>
                <p><span>Release Date:</span>
                    <%= new Date(m.releaseDate).toLocaleDateString() %>
                </p>
                <p><span>Category:</span>
                    <%= m.category %>
                </p>

                <!-- Actors (supports array of actors) -->
                <p><span>Actors:</span>
                    <% if (Array.isArray(m.actors)) { %>
                        <ul>
                            <% m.actors.forEach((actor)=> { %>
                                <li>
                                    <%= actor.name %>
                                </li>
                                <% }) %>
                        </ul>
                        <% } else { %>
                            <%= m.actors %>
                                <% } %>
                </p>

                <!-- Ratings -->
                <p><span>Ratings:</span>
                    <ul>
                        <% m.ratings.forEach((rating)=> { %>
                            <li>
                                <%= rating.value %>
                        </li>
                        <% }) %>
                    </ul>
                </p>

                <!-- <p><span>Ratings:</span> <%= m.ratings.value %> / 5</p> -->

                <!-- Comments -->
                <p><span>Comments:</span></p>
                <ul>
                    <% m.comments.forEach((comment)=> { %>
                        <li>
                            <%= comment.text %>
                        </li>
                        <% }) %>
                </ul>

                <!-- Added By -->
                <p><span>Added By:</span>
                    <%= m.addedBy %>
                </p>
            </div>
            <% }) %>
    </div>
</body>

</html>